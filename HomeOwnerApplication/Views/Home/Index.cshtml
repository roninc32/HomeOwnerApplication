@{
    ViewData["Title"] = "Home";
    var currentTime = DateTime.Parse("2025-03-20 21:03:31");
}

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-8 p-lg-5 mx-auto my-5">
        <h1 class="display-4 fw-bold">Welcome to Home Owner Application</h1>
        <p class="lead fw-normal">Manage your property with ease and connect with your community.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">Get Started</a>
    </div>
</div>

<div class="container px-4 py-5">
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
        <div class="col">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 64px; height: 64px;">
                        <i class="bi bi-house-fill" style="font-size: 2rem; line-height: 64px;"></i>
                    </div>
                    <h3>Property Management</h3>
                    <p>Easily manage your properties, track maintenance requests, and handle documents.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 64px; height: 64px;">
                        <i class="bi bi-people-fill" style="font-size: 2rem; line-height: 64px;"></i>
                    </div>
                    <h3>Community Connect</h3>
                    <p>Stay connected with your neighbors and participate in community events.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 64px; height: 64px;">
                        <i class="bi bi-tools" style="font-size: 2rem; line-height: 64px;"></i>
                    </div>
                    <h3>Maintenance Services</h3>
                    <p>Submit and track maintenance requests with real-time updates.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container px-4 py-5">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h2 class="display-5 fw-bold mb-4">Why Choose Us?</h2>
            <div class="d-flex align-items-center mb-3">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3" style="width: 40px; height: 40px;">
                    <i class="bi bi-check-lg" style="font-size: 1.5rem; line-height: 40px;"></i>
                </div>
                <div>
                    <h4 class="mb-0">Easy to Use</h4>
                    <p class="text-muted mb-0">Intuitive interface for all users</p>
                </div>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3" style="width: 40px; height: 40px;">
                    <i class="bi bi-shield-check" style="font-size: 1.5rem; line-height: 40px;"></i>
                </div>
                <div>
                    <h4 class="mb-0">Secure</h4>
                    <p class="text-muted mb-0">Your data is protected</p>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3" style="width: 40px; height: 40px;">
                    <i class="bi bi-graph-up" style="font-size: 1.5rem; line-height: 40px;"></i>
                </div>
                <div>
                    <h4 class="mb-0">Always Available</h4>
                    <p class="text-muted mb-0">24/7 access to your information</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="~/images/dashboard-preview.png" class="img-fluid rounded shadow-lg" alt="Dashboard Preview">
        </div>
    </div>
</div>