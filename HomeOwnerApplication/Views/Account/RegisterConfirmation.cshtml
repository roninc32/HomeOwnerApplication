@{
    ViewData["Title"] = "Registration Confirmation";
    var email = ViewData["Email"]?.ToString();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title mb-4">Registration Successful!</h2>
                    <p class="card-text mb-4">
                        We've sent a confirmation email to <strong>@email</strong>.<br />
                        Please check your email and click the confirmation link to activate your account.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Proceed to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>