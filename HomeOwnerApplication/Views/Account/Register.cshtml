@model HomeOwnerApplication.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register as Home Owner";
    Layout = "_LoginLayout";
    var currentTime = DateTime.Parse("2025-03-20 21:20:43");
}

<div class="container-fluid min-vh-100">
    <div class="row min-vh-100">
        <!-- Left side - Information -->
        <div class="col-md-4 d-none d-md-flex bg-primary bg-gradient">
            <div class="container d-flex align-items-center">
                <div class="text-white px-4">
                    <h2 class="display-6 fw-bold mb-4">Join Our Community</h2>
                    <div class="mb-4">
                        <h5 class="fw-light mb-3">As a registered homeowner, you'll get:</h5>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <i class="bi bi-house-check-fill me-2"></i>
                                Property Management Tools
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-tools me-2"></i>
                                Maintenance Request System
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-calendar-event me-2"></i>
                                Community Event Access
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-file-earmark-text me-2"></i>
                                Document Repository
                            </li>
                        </ul>
                    </div>
                    <div class="mt-4 pt-2">
                        <small class="d-block mb-3">
                            Already have an account?
                            <a asp-action="Login" class="text-white text-decoration-underline">Sign in here</a>
                        </small>
                        <small class="text-light">
                            Current Time (UTC): @currentTime.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side - Registration form -->
        <div class="col-md-8 d-flex align-items-center">
            <div class="container py-5">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <img src="~/images/logo.svg" alt="HOA Logo" class="mb-3" height="60" />
                            <h2 class="fw-bold">Register as a Home Owner</h2>
                            <p class="text-muted">Create your account to access homeowner services</p>
                        </div>

                        <form asp-action="Register" method="post" id="registerForm">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="FirstName" class="form-control" placeholder="John" />
                                        <label asp-for="FirstName"></label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                        <label asp-for="LastName"></label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="(123) 456-7890" />
                                    <label asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="PropertyAddress" class="form-control" placeholder="123 Main St" />
                                    <label asp-for="PropertyAddress"></label>
                                    <span asp-validation-for="PropertyAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <label asp-for="Password"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                        <label asp-for="ConfirmPassword"></label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input asp-for="AcceptTerms" class="form-check-input" />
                                    <label asp-for="AcceptTerms" class="form-check-label">
                                        I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a>
                                    </label>
                                    <span asp-validation-for="AcceptTerms" class="text-danger d-block"></span>
                                </div>
                            </div>

                            <input type="hidden" asp-for="RegisteredAt" value="@currentTime" />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person-plus-fill me-2"></i>Register Account
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Terms and Conditions Modal -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Terms and Conditions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Acceptance of Terms</h6>
                <p>By registering for an account, you agree to comply with these Terms and Conditions...</p>
                <!-- Add more terms content here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Prevent double form submission
            $('#registerForm').submit(function () {
                $(this).find(':submit').prop('disabled', true);
                $(this).find(':submit').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Creating Account...');
            });

            // Phone number formatting
            $('#PhoneNumber').on('input', function() {
                let number = $(this).val().replace(/[^\d]/g, '');
                if (number.length > 0) {
                    number = number.match(new RegExp('.{1,4}$|.{1,3}', 'g')).join('-');
                }
                $(this).val(number);
            });
        });
    </script>
}